LoadModule passenger_module /home/server/.rvm/gems/ruby-1.9.2-p290/gems/passenger-3.0.9/ext/apache2/mod_passenger.so
PassengerRoot /home/server/.rvm/gems/ruby-1.9.2-p290/gems/passenger-3.0.9
PassengerRuby /home/server/.rvm/wrappers/ruby-1.9.2-p290/ruby

<VirtualHost *:80>
  PassengerMaxPoolSize 6

  # Hosting multiple websites with one Apache2
  # ServerName domain.tpl
  # ServerAlias domain.tpl

  DocumentRoot /home/server/rails-application/current/public

  RailsEnv production
  RackEnv production

  <Directory "/home/server/rails-application/current/public">
    Options FollowSymLinks
    AllowOverride None
    Options -MultiViews
    Order allow,deny
    Allow from all
  </Directory>

  ErrorLog /var/log/apache2/rails-application.err
  CustomLog /var/log/apache2/rails-application.log combined
</VirtualHost>
